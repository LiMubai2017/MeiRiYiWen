<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bookshelf_imageview"
        android:layout_width="120dp"
        android:layout_height="164dp"
        android:scaleType="centerCrop"
        android:layout_margin="20dp"
        android:transitionName="catelog_imageview"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bookshelf_imageview"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bookshelf_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/BLACK"
            android:text="大众读者"
            android:layout_marginTop="20dp"
            android:transitionName="catelog_title"/>

        <TextView
            android:id="@+id/bookshelf_author_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/BLACK"
            android:text="大众读者"
            android:layout_marginTop="10dp"
            android:transitionName="catelog_author"/>

    </LinearLayout>

</RelativeLayout>